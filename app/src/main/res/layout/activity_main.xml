<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebg"
    tools:context="com.example.xinmeng.sia.MainActivity">

    <ImageView
        android:id="@+id/mainTitleLogo"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_marginTop="146dp"
        app:srcCompat="@drawable/image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/usernameField"
        android:layout_width="1.50in"
        android:layout_height="0.240in"
        android:layout_alignTop="@+id/mainTitleLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:background="@drawable/username"
        android:ems="10"
        android:inputType="text"
        android:text="@string/type_username"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:clickable="false"
        tools:onClick="usernameClick" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="1.50in"
        android:layout_height="0.240in"
        android:layout_alignStart="@+id/usernameField"
        android:layout_below="@+id/usernameField"
        android:layout_marginTop="14dp"
        android:background="@drawable/username"
        android:ems="10"
        android:inputType="textVisiblePassword"
        android:text="@string/type_password"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="0.7in"
        android:layout_height="0.240in"
        android:layout_below="@+id/passwordField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="@drawable/login" />

</RelativeLayout>
