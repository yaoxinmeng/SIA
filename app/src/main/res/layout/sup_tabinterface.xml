<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/defect_content_box"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:padding="16dp"
        app:srcCompat="@drawable/suppriority_inputfield" />

    <ImageView
        android:id="@+id/defect_header_box"
        android:layout_width="86dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/suptask_orange" />

    <TextView
    android:id="@+id/defect_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignStart="@+id/defect_header_box"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="13dp"
    android:text="TextView"
    android:textColor="#FFFFFF"
    android:textSize="17dp" />

    <TextView
        android:id="@+id/defect_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/defect_content_box"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/priority_asterisk"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@+id/defect_header_box"
        android:padding="3dp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/suppriority_asterisk"
        android:visibility="invisible"/>


</RelativeLayout>